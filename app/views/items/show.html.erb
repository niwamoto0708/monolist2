<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <%= image_tag(@item.large_image, alt: @item.title) %>
        </div>
      </div>
      <div class="title">
        <a href="<%= @item.detail_page_url %>"><%= @item.title %></a>
        <% content_for :head do %>
          <title><%= @item.title %>- monolist</title>
          <meta name="description" content="<%= @item.description %>に関する情報です。<%= @item.title %>この商品を欲しい人、持ってる人を表示しています。">
        <% end %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @item.have_users.each do |user| %>
          <%= link_to (gravatar_for user, {size: 40}), user %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% @item.want_users.each do |user| %>
          <%= link_to (gravatar_for user, {size: 40}), user %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to('楽天詳細ページへ', 'http://item.rakuten.co.jp/dorama/n33275817/') %>
      </div>
    </div>
  </div>
</div>
